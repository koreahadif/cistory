<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE sqlMapConfig
PUBLIC "-//ibatis.apache.org//DTD SQL Map Config 2.0//EN"
"http://ibatis.apache.org/dtd/sql-map-config-2.dtd">

<!-- Always ensure to use the correct XML header as above! -->

<sqlMapConfig>

<!-- properties 파일 읽어들인다 -->
<properties resource="SqlMapConfig.properties" /> 

<settings
   cacheModelsEnabled="true"
   enhancementEnabled="true"
   lazyLoadingEnabled="true"
   maxRequests="32"
   maxSessions="10"
   maxTransactions="5"
   useStatementNamespaces="true"
/>

<!-- Type aliases allow you to use a shorter name for long fully qualified class names. -->
<typeAlias alias="order" type="testdomain.Order"/> <!-- 별칭 정의 -->

<transactionManager type="JDBC" >
   <dataSource type="SIMPLE">
      <property name="JDBC.Driver" value="${driver}"/>
      <property name="JDBC.ConnectionURL" value="${url}"/>
      <property name="JDBC.Username" value="${username}"/>
      <property name="JDBC.Password" value="${password}"/>
      <property name="Driver.SetBigStringTryClob" value="true" />
   </dataSource>
</transactionManager>

<!-- 쿼리문이 있는 xml파일 읽어들인다 -->
<sqlMap resource="member.xml" />
<sqlMap resource="test.xml" /> 
<sqlMap resource="history.xml" /> 
<sqlMap resource="board.xml" />
<sqlMap resource="admin.xml" />

</sqlMapConfig>
